{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "sourceMap": false,
    "target": "es2017"
  },
  "exclude": [
    "build",
    "node_modules",
    "webpack.config.js"
  ]
}
